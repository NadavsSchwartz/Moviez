
<% if @error %>
<div id="error_explanation">
  <p><%= @error %></p>
</div>
<% end %>

<br><br>
<h4 class="indigo-text center">Sign in to your account</h5>
<br><br>

<section class="center col s4">
  <div class="container">
  
    <%= form_tag('/login', :class => 'z-depth-1 grey lighten-4 row', :style => "display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;") do %>
      <div class="input-field col s12">
        <%= label_tag :email %>
        <%= text_field_tag :email%>
      </div>

      <div class="input-field col s12">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>

      <div class='row'>
        <%= submit_tag 'Sign In', :class => 'center btn btn-large waves-effect indigo' %>
      </div>
      
    <% end %>
  </div>
</div>