<p class="flow-text center">Enjoy the latest movies searched by <%=@user.name%>!</p>
<div class="row">
  <div class="col s12">

    <% @user.movies.each do |movie|%>
    <div class="col s4">
      <div class="card small">
        <div class="card-image">
          <% if !pic_available?%>
          <span>Image is not available through the api, if you'd like, you can report it
            <%= mail_to "cliprojectfis@gmail.com", "here"%>. thanks! :)</span>
          <%else%>
          <img src="<%=@movie.poster%>">
          <%end%>
        </div>

        <div class="card-stacked">
          <div class="card-content">

            <strong class="center"><%=movie.title%></strong>
            <p><%=movie.plot%></p>

            <div class="section center">
              <%= link_to 'See reviews', movie_reviews_path(movie.id), method:'get', class: 'btn indigo '%>
              <%= link_to 'Delete movie', user_path(@user.id), method:'delete', class: 'btn indigo '%>
              <%= link_to 'Edit review', edit_movie_review_path(@user.reviews.ids[0]), method:'get', class: 'btn indigo '%>
            </div>
          </div>

        </div>
      </div>
    </div>
    <%end%>
  </div>
</div>