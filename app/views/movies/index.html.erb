
<%=  link_to 'search a movie', movie_search_path , method:'get'%>
<div class="row">
<div class="col s12">
  
<% @movies.each do |movie|%>
<div class="col s4">
    <div class="card medium">
      <div class="card-image">
        <img src=<%=movie.poster%>>
      </div>
      <div class="card-stacked">
        <div class="card-content">
        <p class="center"><strong><%=movie.title%></strong></p>
          <p><%=movie.plot%></p>
        </div>

      </div>
    </div>
    </div>
  <%end%>
  </div>
</div>
            
