<p class="flow-text center">Enjoy the latest movies searched by our users, or use the search box in the navigation bar to look up new movies!</p>
<%=  link_to 'search a movie', movie_search_path , method:'get'%>
<div class="row">
<div class="col s12">
  
<% @movies.each do |movie|%>
<div class="col s4">
    <div class="card medium">
      <div class="card-image">
        <img src=<%=movie.poster%>>
      </div>
      <div class="card-stacked">
        <div class="card-content">
        <p class="center"><strong><%=movie.title%></strong></p>
          <p><%=movie.plot%></p>
        <div class="row center">
          <%= link_to 'See reviews', movie_reviews_path(movie.id), class: 'btn indigo right'%>
          <%= link_to 'New review', new_movie_review_path(movie.id), class: 'btn indigo left'%>
          </div>
        </div>
      </div>
    </div>
    </div>
  <%end%>
  </div>
</div>
            
